<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pt.lsts.accl.activities.MainActivity" >

    <Button
        android:id="@+id/settingsCheckListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/systemListButton"
        android:text="Settings/Checklist" />

    <Button
        android:id="@+id/testButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settingsCheckListButton"
        android:layout_below="@+id/settingsCheckListButton"
        android:text="Test" />

    <Button
        android:id="@+id/test2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/testButton"
        android:layout_below="@+id/testButton"
        android:text="Test 2" />

    <Button
        android:id="@+id/chooseActiveSysButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Choose Active System" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SystemList"
        android:id="@+id/systemListButton"
        android:layout_below="@+id/chooseActiveSysButton"
        android:layout_alignParentLeft="true" />

</RelativeLayout>
