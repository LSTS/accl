<project name="accl" default="dist">

  <property name="test-dir" location="src-junit" />

  <path id="classpath.base">
  	<pathelement location="build" />
  </path>
  <path id="classpath.libs">
  	<pathelement location="libs/libimc.jar" />
	<pathelement location="libs/otto-1.3.6.jar" />
  </path>
  
	
  <target name="dist" depends="compile" description="generates accl.jar">
  	<unjar src="libs/libimc.jar" dest="build"/>
  	<unjar src="libs/otto-1.3.6.jar" dest="build"/>
  	
  	<delete>
		<fileset dir="build">
	   	  <include name="**/*.java"/>	    
		</fileset>
	</delete>
  	
  	<jar destfile="accl.jar" basedir="build" index="true"/>
  	<delete dir="build"/>
  </target>
	
  <target name="compile">
	<delete dir="build"/>
	<mkdir dir="build"/>
	<javac encoding="UTF-8" srcdir="src" destdir="build" includes="**/*.java" fork="false">
		<classpath refid="classpath.libs"/>
  	</javac>
   </target>

</project>